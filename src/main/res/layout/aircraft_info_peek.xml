<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/dark_gray">

    <TextView
        android:id="@+id/callsign"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="callsign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="18sp"
        tools:text="PRG"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/operator"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/operator" />

    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âŸ¶"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@+id/from"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/from"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="18sp"
        tools:text="BRQ"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="1dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/arrow"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@+id/arrow" />

    <TextView
        android:id="@+id/operator"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:textSize="12sp"
        tools:text="CSA Czech Airlines"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/callsign"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/callsign" />

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="OK-TSR"
        android:textColor="@color/gray"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/ac_type"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ac_type" />

    <TextView
        android:id="@+id/ac_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Boeing 737-82R"
        android:textColor="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>