<?xml version="1.0" encoding="utf-8"?>
<com.github.clans.fab.FloatingActionMenu xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom|end"
    android:id="@+id/floating_action_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    fab:menu_animationDelayPerItem="55"
    fab:menu_backgroundColor="@android:color/transparent"
    fab:menu_buttonSpacing="0dp"
    fab:menu_colorNormal="@color/red"
    fab:menu_fab_size="normal"
    fab:menu_icon="@drawable/ic_settings_white_24dp"
    fab:menu_labels_colorNormal="@color/dark_gray"
    fab:menu_labels_cornerRadius="3dp"
    fab:menu_labels_ellipsize="none"
    fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
    fab:menu_labels_margin="0dp"
    fab:menu_labels_maxLines="-1"
    fab:menu_labels_padding="8dp"
    fab:menu_labels_position="left"
    fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
    fab:menu_labels_showShadow="true"
    fab:menu_labels_singleLine="false"
    fab:menu_labels_textColor="@color/white"
    fab:menu_labels_textSize="15sp"
    fab:menu_openDirection="up"
    fab:menu_showShadow="false">

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_login_white_24dp"
        fab:fab_colorNormal="@color/red"
        fab:fab_label="@string/Logout"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/filters_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_filter_list_white_24dp"
        fab:fab_colorNormal="@color/red"
        fab:fab_label="@string/Filters"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/preferences_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_preferences_white_24dp"
        fab:fab_colorNormal="@color/red"
        fab:fab_label="@string/Preferences"
        fab:fab_size="mini" />
</com.github.clans.fab.FloatingActionMenu>